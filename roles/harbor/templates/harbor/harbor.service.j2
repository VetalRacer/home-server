[Unit]
Description=Harbor service
Requires=docker.service
After=docker.service
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ systemd_unit_home_path }}"
ExecStartPre=-{{ host_command_sh }} -c '{{ host_command_docker }} kill harbor 2>/dev/null'
ExecStartPre=-{{ host_command_sh }} -c '{{ host_command_docker }} rm harbor 2>/dev/null'

ExecStart=/usr/bin/docker run --rm --name harbor \
			--log-driver=none \
			--network={{ nginx_docker_network }} \
			--env TZ={{ timezone }} \
      		--env VIRTUAL_HOST={{ harbor_service_hostname }} \
#			-p 8081:8081 \
      		-v {{ harbor_data_path }}://nexus-data \
			{{ harbor_docker_image }}

ExecStop=-{{ host_command_sh }} -c '{{ host_command_docker }} kill harbor 2>/dev/null'
ExecStop=-{{ host_command_sh }} -c '{{ host_command_docker }} rm harbor 2>/dev/null'
Restart=always
RestartSec=30
SyslogIdentifier=harbor

[Install]
WantedBy=multi-user.target
