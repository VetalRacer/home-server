---
# For configuration options and examples, please see:
# https://gethomepage.dev/en/configs/services

- Media:
{% if plex_installation_enabled == true %}
    - Plex:
        icon: plex.png
        href: http://{{ plex_service_hostname }}
        description: Media server
        server: homeserver
        container: plex
        widget:
          type: plex
          url: http://plex:32400
          key: {{ plex_apikey }}
{% endif %}
{% if overseerr_installation_enabled == true %}
    - Overseerr:
        icon: overseerr.png
        href: http://{{ overseerr_service_hostname }}
        description: Request TV Shows and Movies via WebUI
        server: homeserver
        container: overseerr
{% endif %}
{% if sonarr_installation_enabled == true %}
    - Sonarr:
        icon: sonarr.png
